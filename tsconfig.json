{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/__tests__/**/*",
    "**/__stories__/**/*"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
